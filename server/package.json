{
  "name": "server",
  "version": "1.0.0",
  "main": "dist/index.js",
  "description": "NIST 800-171 Compliance Tracker - Backend API",
  "scripts": {
    "dev": "ts-node-dev -r tsconfig-paths/register --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "prisma:seed": "ts-node src/seed.ts",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "type-check": "tsc --noEmit",
    "test:auth": "ts-node -r tsconfig-paths/register src/scripts/test-auth.ts",
    "test:m365": "ts-node -r tsconfig-paths/register src/scripts/test-m365-services.ts",
    "test:sync": "ts-node -r tsconfig-paths/register src/scripts/test-sync.ts",
    "cleanup:reports": "ts-node src/scripts/cleanupOldReports.ts"
  },
  "keywords": [
    "nist-800-171",
    "compliance",
    "api"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@azure/msal-node": "^2.16.3",
    "@microsoft/microsoft-graph-client": "^3.0.7",
    "@prisma/client": "^6.19.0",
    "adm-zip": "^0.5.16",
    "archiver": "^6.0.2",
    "canvas": "^3.2.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "exceljs": "^4.4.0",
    "express": "^4.21.1",
    "fast-csv": "^5.0.5",
    "helmet": "^8.0.0",
    "isomorphic-fetch": "^3.0.0",
    "mime-types": "^3.0.1",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "passport": "^0.7.0",
    "passport-azure-ad": "^4.3.5",
    "pdfkit": "^0.17.2",
    "pdfkit-table": "^0.1.99",
    "uuid": "^13.0.0",
    "winston": "^3.15.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/adm-zip": "^0.5.7",
    "@types/archiver": "^7.0.0",
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/isomorphic-fetch": "^0.0.39",
    "@types/microsoft-graph": "^2.40.1",
    "@types/mime-types": "^3.0.1",
    "@types/morgan": "^1.9.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.10.0",
    "@types/node-cron": "^3.0.11",
    "@types/pdfkit": "^0.17.3",
    "@types/uuid": "^10.0.0",
    "prisma": "^6.19.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.3"
  },
  "prisma": {
    "seed": "ts-node -r tsconfig-paths/register prisma/seed.ts"
  }
}
